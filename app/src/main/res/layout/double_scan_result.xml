<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/double_scan_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/validation_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/validation_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_invalid" />

    <TextView
        android:id="@+id/validation_text"
        app:layout_constraintBottom_toBottomOf="@+id/validation_icon"
        app:layout_constraintStart_toEndOf="@+id/validation_icon"
        app:layout_constraintTop_toTopOf="@+id/validation_icon"
        tools:text="Certificazione valida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:fontFamily="@font/titiliumfont"
        android:textColor="@color/blue_dark"
        android:textSize="@dimen/text_size_12sp"
        android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>